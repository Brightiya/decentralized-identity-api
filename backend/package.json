{
  "name": "decentralized-identity-backend",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "node --experimental-vm-modules node_modules/.bin/jest --runInBand --detectOpenHandles",
    "test:ci": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand --verbose",
    "test:watch": "node --experimental-vm-modules node_modules/.bin/jest --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/.bin/jest --coverage",
    "compile": "hardhat compile --config ../hardhat.config.cjs",
    "test:contracts": "hardhat test --config ../hardhat.config.cjs",
    "start:node": "hardhat node --config ../hardhat.config.cjs",
    "deploy:localhost": "hardhat run --network localhost ../scripts/deploy.mjs --config ../hardhat.config.cjs"
  },
  "dependencies": {
    "@pinata/sdk": "^2.1.0",
    "axios": "^1.7.7",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "ethers": "^6.15.0",
    "express": "^4.21.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multiformats": "^13.4.2",
    "node-fetch": "^3.3.2",
    "pg": "^8.16.3",
    "siwe": "^3.0.0",
    "typescript": "^5.4.5"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-ignition": "0.15.13",
    "@nomicfoundation/hardhat-ignition-ethers": "0.15.14",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomicfoundation/hardhat-verify": "^2.1.0",
    "@nomicfoundation/ignition-core": "0.15.13",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.9.1",
    "@types/supertest": "^6.0.3",
    "chai": "^4.5.0",
    "hardhat": "^2.26.3",
    "hardhat-gas-reporter": "^2.3.0",
    "jest": "^30.2.0",
    "mocha": "^11.0.1",
    "nodemon": "^3.1.10",
    "solidity-coverage": "^0.8.16",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2"
  }
}
