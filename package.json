{
  "name": "decentralized-identity-api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "packageManager": "yarn@4.5.1",
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "lint": "yarn eslint .",
    "test": "node --experimental-vm-modules ./node_modules/.bin/jest --detectOpenHandles --forceExit",
    "test:ci": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand --verbose",
    "test:backend": "node --experimental-vm-modules ./node_modules/.bin/jest backend/test/**/*.test.js --detectOpenHandles --forceExit",
    "test:frontend": "yarn workspace frontend test",
    "test:coverage": "node --experimental-vm-modules ./node_modules/.bin/jest --coverage --detectOpenHandles --forceExit"
  },
  "dependencies": {
    "qrcode": "^1.5.4",
    "readable-stream": "^4.7.0",
    "typescript": "5.4.5"
  },
  "resolutions": {
    "typescript": "5.4.5"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "17.0.2",
    "@angular/cli": "^21.1.3",
    "@babel/runtime": "7.24.8",
    "@jest/globals": "^29.7.0",
    "@types/node": "^25.2.2",
    "@types/qrcode": "^1.5.6",
    "@types/readable-stream": "^4.0.23",
    "angular-cli-ghpages": "^3.0.2",
    "assert": "^2.1.0",
    "browserify-zlib": "^0.2.0",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.1",
    "env-paths": "^3.0.0",
    "eslint": "^9.38.0",
    "events": "^3.3.0",
    "find-cache-dir": "3.3.2",
    "https-browserify": "^1.0.0",
    "jest": "^29.7.0",
    "os-browserify": "^0.3.0",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "ts-jest": "^29.2.5",
    "url": "^0.11.4",
    "vm-browserify": "^1.1.2"
  },
  "jest": {
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "testSequencer": "<rootDir>/backend/test/testSequencer.js",
    "transform": {},
    "transformIgnorePatterns": [
      "/node_modules/(?!(@pinata/sdk|ethers|siwe|jsonwebtoken|multiformats)/)"
    ],
    "setupFiles": [
      "<rootDir>/backend/test/jest-dotenv-setup.js",
      "<rootDir>/backend/test/setup-pinata-mock.js",
      "<rootDir>/backend/test/setup-contract-mock.js"
    ],
    "globalSetup": "<rootDir>/backend/test/global-setup.js",
    "globalTeardown": "<rootDir>/backend/test/global-teardown.js",
    "setupFilesAfterEnv": [
      "<rootDir>/backend/test/setup.js"
    ],
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov"
    ]
  }
}
