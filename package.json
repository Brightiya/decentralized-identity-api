{
  "name": "decentralized-identity-api-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "compile": "npx hardhat compile --config ./hardhat.config.cjs",
    "test:contracts": "npx hardhat test backend/test/api.test.js --config ./hardhat.config.cjs",
    "start:node": "npx hardhat node --config ./hardhat.config.cjs",
    "deploy:localhost": "npx hardhat run --network localhost scripts/deploy.mjs --config ./hardhat.config.cjs",
    "lint": "npx eslint .",
    "postinstall": "npm --prefix backend install && npm --prefix frontend install"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "dotenv": "^16.6.1",
    "eslint": "^9.38.0",
    "hardhat": "^2.26.0"
  },
  "engines": {
    "node": ">=22.10.0"
  },
  "dependencies": {
    "@pinata/sdk": "^2.1.0",
    "ethers": "^6.15.0",
    "node-fetch": "^3.3.2"
  }
}
