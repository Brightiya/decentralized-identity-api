{
  "name": "decentralized-identity-api-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "packageManager": "yarn@4.5.1",
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "lint": "yarn eslint .",
    "postinstall": "yarn --cwd backend install --mode=skip-build && yarn --cwd frontend install --mode=skip-build",
    "test": "node --experimental-vm-modules ./node_modules/.bin/jest --forceExit",
    "test:backend": "node --experimental-vm-modules ./node_modules/.bin/jest backend/test/**/*.test.js --forceExit",
    "test:frontend": "yarn workspace frontend test",
    "test:coverage": "node --experimental-vm-modules ./node_modules/.bin/jest --coverage --forceExit"
  },
  "dependencies": {
    "typescript": "5.4.5"
  },
  "resolutions": {
    "typescript": "5.4.5"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "env-paths": "^3.0.0",
    "eslint": "^9.38.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5"
  },
  "jest": {
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "testSequencer": "<rootDir>/backend/test/testSequencer.js",
    "transform": {},
    "transformIgnorePatterns": [
      "/node_modules/(?!(@pinata/sdk|ethers|siwe|jsonwebtoken|multiformats)/)"
    ],
    "setupFiles": [
      "<rootDir>/backend/test/jest-dotenv-setup.js",
      "<rootDir>/backend/test/setup-pinata-mock.js",
      "<rootDir>/backend/test/setup-contract-mock.js"
    ],
    "globalSetup": "<rootDir>/backend/test/global-setup.js",
    "setupFilesAfterEnv": [
      "<rootDir>/backend/test/setup.js"
    ],
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "globals": {
      "DOTENV_CONFIG_PATH": "./backend/.env.test"
    }
  }
}
