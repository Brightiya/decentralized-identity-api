{
  "name": "decentralized-identity-api-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "compile": "npx hardhat compile --config ./hardhat.config.mjs",
    "test:contracts": "npx hardhat test --config ./hardhat.config.mjs",
    "start:node": "npx hardhat node --config ./hardhat.config.mjs",
    "deploy:localhost": "npx hardhat run --network localhost scripts/deploy.mjs --config ./hardhat.config.mjs",
    "lint": "npx eslint .",
    "postinstall": "npm --prefix backend install && npm --prefix frontend install"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "dotenv": "^16.6.1",
    "eslint": "^9.38.0",
    "hardhat": "^2.26.0"
  },
  "engines": {
    "node": ">=22.10.0"
  },
  "dependencies": {
    "ethers": "^6.15.0",
    "node-fetch": "^3.3.2",
    "pinata-web3": "^0.5.4"
  }
}
